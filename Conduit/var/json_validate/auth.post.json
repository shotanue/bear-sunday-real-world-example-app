{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "/user POST request validation",
  "properties": {
    "user": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "password": {
          "type": "string",
          "minLength": 8,
          "maxLength": 255
        }
      },
      "required": [
        "email",
        "password"
      ]
    }
  },
  "required": [
    "user"
  ]
}